<VerticalBoxLayout spacing="0" flex="1">
	<GroupBox legend="Long Running Task List" flex="1">
		<StandardTable varName="tasksTable" flex="1">
			<Column title="Task Name" width="1*" minWidth="60"/>
			<Column title="ID" width="1*" minWidth="60" maxWidth="150"/>
			<Column title="Start" width="1*" minWidth="60" maxWidth="100"/>
			<Column title="Current" width="1*" minWidth="60" maxWidth="100"/>
			<Column title="Finish" width="1*" minWidth="60" maxWidth="100"/>
			<Column title="Status Message" width="3*" minWidth="60"/>
		</StandardTable>
	</GroupBox>
</VerticalBoxLayout>
