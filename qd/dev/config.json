{
  "name"    : "dev",

  "include" :
  [
    {
      "path" : "${QOOXDOO_PATH}/tool/data/config/application.json"
    }
  ],

  "export" :
  [
    "api",
    "api-data",
    "build",
    "clean",
    "distclean",
    "fix",
    "info",
    "inspector",
    "lint",
    "migration",
    "pretty",
    "profiling",
    "source",
    "source-all",
    "source-hybrid",    
    "simulation-build",
    "simulation-run",
    "test",
    "test-source",
    "translation"
  ],
  
  "default-job" : "source-hybrid",

  "let" :
  {
    "APPLICATION"  : "dev",
    "QOOXDOO_PATH" : "../../../3rdParty/qooxdoo-4.1-sdk",
    "QXTHEME"      : "dev.theme.Theme",
    "API_EXCLUDE"  : ["qx.test.*", "${APPLICATION}.theme.*", "${APPLICATION}.test.*", "${APPLICATION}.simulation.*"],
    "LOCALES"      : [ "en" ],
    "CACHE"        : "${TMPDIR}/qx${QOOXDOO_VERSION}/cache",
    "ROOT"         : "."
  },

  // You only need to edit the remainder of this file, if you want to customize
  // specific jobs, or add own job definitions.

  "jobs" :
  {
	"pretty" :
	{
		"pretty-print" : {
			"general" :
			{
				"indent-string" : "\t"
			},
			"comments" :
			{
				"block" :
				{
					"add" : true
				},
				"trailing" :
				{
					"keep-column" : false,
					"comment-cols" : [50,70,90],
					"padding" : "  "
				}
			},
			"code" :
			{
				"align-with-curlies" : false,
				"open-curly" :
				{
					"newline-before" : "m",
					"indent-before" : false
				}
			}
		}
	}

  }
}
